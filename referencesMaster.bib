@article{hernandez2016,
  author={L. Hern\'{a}ndez-Garc\'{i}a and J. Masegosa and O. González-Martín and I. Márquez and J. Perea},
  title={Unveiling the Physics of Low-luminosity AGNs through X-Ray Variability: LINER versus Seyfert 2},
