@article{zu2011,
  author={Ying Zu and C. S. Kochanek and Bradley M. Peterson},
  title={An Alternative Approach to Measuring Reverberation Lags in Active Galactic Nuclei},
  journal={\apj},
  volume={735},
  number={2},
  pages={80},
